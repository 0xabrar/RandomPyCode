<Menu>:

	paint_canvas: my_canvas

	AnchorLayout:
		anchor_x: "center"
		anchor_y: "top"
		ScreenManager:
			size_hint: 1, 0.9
			id: manager
			Screen: 
				name: "menu"
				Label:
					markup: True
					text: "[size=30]Welcome to Paint![/size]"
			Screen:
				name: "paint"
				PaintWidget:
					id: my_canvas
	AnchorLayout:
		anchor_x: "center"
		anchor_y: "bottom"
		BoxLayout: 
			orientation: "horizontal"
			size_hint: 1, 0.1
			Button:
				text: "Menu"
				on_press: root.clear_canvas(); manager.current = "menu"
			Button:
				text: "Paint"
				on_press: manager.current = "paint"

