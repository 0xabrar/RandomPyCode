<Menu>:

	paint_canvas: my_canvas

	AnchorLayout:
		anchor_x: "center"
		anchor_y: "top"
		ScreenManager:
			size_hint: 1, 0.9
			id: manager
			Screen: 
				name: "menu"
				Label:
					markup: True
					text: "[size=30]Welcome to Paint![/size]"
			Screen:
				name: "paint"
				PaintWidget:
					id: my_canvas
			Screen:
				name: "rotate_button"
				FloatLayout
					Button:
						text: "I'm rotated"
						size_hint: None, None
						pos_hint: {"center_x": 0.5, "center_y": 0.5}
						canvas.before:
							PushMatrix
							Rotate:	
								angle: 45
								origin: self.center
						canvas.after: 
							PopMatrix
	AnchorLayout:
		anchor_x: "center"
		anchor_y: "bottom"
		BoxLayout: 
			orientation: "horizontal"
			size_hint: 1, 0.1
			Button:
				text: "Menu"
				on_press: root.clear_canvas(); manager.current = "men"
			Button:
				text: "Paint"
				on_press: manager.current = "paint"
			Button:
				text: "Rotate"
				on_press: root.clear_canvas(); manager.current = "rotate_button"